{
  "compilerOptions": {
    "typeRoots" : ["node_modules/@types", "dist"],
    "types": [
      "winjs",
      "declarations"
    ],
    "target": "ES6",
    "rootDir": "./",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist/"
  },
  "include": [
    "./src/**/*.ts"
  ]
}